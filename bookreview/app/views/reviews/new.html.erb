Book: <%= @book.title %> (<%= link_to "back", new_book_path %>)
<hr />
Enter comment for: "<%= @book.title%>"<br /><br />
<!--%=debug @movie.id %-->
<%= form_for @review, :url => { :action => :create, :id => @book.id } do |f| -%>
	Name: <%= f.text_field :name %> <br />
	Comment: <br /> <%= f.text_area :comment, :cols => 80, :rows => 10, :class => 'app_input'%> <br />
	Rating: <%= f.text_field :rating %> <br />
	<%= f.submit %>
<% end -%>

<hr />

<!--%=debug @book.reviews %-->
<% if @book.reviews.exists? %>
	<table border=1>
		<tr>
			<th> Name </th>
			<th> Comment </th>	
			<th> Rating </th> 
		</tr>
		
		<% for item in @book.reviews %>
			<% if !item.name.nil? %>
				<tr>
					<td> <%= item.name %></td>
					<td> <%= item.comment %></td>
					<td> <%= item.rating %></td>
				</tr>
			<% end %>
		<% end%>
	</table>
<% else %>
	No reviews yet
<% end %>

